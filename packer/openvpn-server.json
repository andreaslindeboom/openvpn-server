{
  "builders": [
    {
      "type": "digitalocean",
      "droplet_name": "openvpn-server-builder",
      "snapshot_name": "openvpn-server{{timestamp}}",
      "api_token": "{{user `digitalocean.access_token`}}",
      "image": "{{ user `base_image`}}",
      "region": "ams3",
      "size": "512mb"
    },
    {
        "type": "docker",
        "image": "openvpn_base",
        "pull": false,
        "export_path": "openvpn-server"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "easy-rsa.yml",
      "destination": "/tmp/easy-rsa.yml"
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/local.yml",
      "playbook_dir": "ansible",
      "extra_arguments": "--extra-vars=\"@/tmp/easy-rsa.yml\""
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-import",
        "repository": "openvpn-server",
        "only": [ "docker" ]
      }
    ]
  ]
}
